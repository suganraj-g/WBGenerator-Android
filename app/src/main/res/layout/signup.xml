<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    tools:context="com.example.suganraj.wbgenerator.SignUp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/sname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/saadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Aadhar Number"
                android:layout_below="@id/sname"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saddress"
                android:layout_below="@+id/saadhar"
                android:layout_centerHorizontal="true"
                android:hint="Address"
                android:paddingLeft="20dp"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sage"
                android:layout_below="@+id/saddress"
                android:layout_centerHorizontal="true"
                android:hint="Age"
                android:paddingLeft="20dp"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/sradio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sage"
                android:orientation="horizontal"
                android:paddingLeft="30sp"
                android:layout_marginTop="10sp">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:onClick="onRadioButtonClicked"
                    android:layout_marginLeft="30sp"
                    android:textSize="18sp"
                    android:checked="false"
                    android:textColor="#000000"/>

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:layout_marginLeft="50sp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:checked="false"
                    android:text="Female" />
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sphone"
                android:layout_below="@+id/sradio"
                android:layout_centerHorizontal="true"
                android:hint="Phone Number"
                android:paddingLeft="20dp"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/semail"
                android:layout_below="@+id/sphone"
                android:layout_centerHorizontal="true"
                android:hint="Email"
                android:paddingLeft="20dp"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/spassword"
                android:layout_below="@+id/semail"
                android:layout_centerHorizontal="true"
                android:hint="Password"
                android:paddingLeft="20dp"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/sRePassword"
                android:layout_below="@+id/spassword"
                android:layout_centerHorizontal="true"
                android:hint="Re-Password"
                android:paddingLeft="20dp"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sRePassword"
                android:layout_marginTop="10dp"
                android:background="#f65757"
                android:text="Sign Up" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>